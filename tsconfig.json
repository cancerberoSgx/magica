{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"], 
    "strict": true, 
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist", 
    "declaration": true,
    "rootDir": ".",
    "skipLibCheck": true
  },
  "include": [
    "src", "test", "test-browser"
  ],
  "exclude": [
    "node_modules", "dist", "test-browser-outdir", "tmp_umd-bundle-test-out", "test-browser-outdir*", 
  ]
}
